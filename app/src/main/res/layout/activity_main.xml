<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/txtBienvenida"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/horoscopo" />

    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Bienvenido a la App"
        android:textColor="@android:color/background_light"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:id="@+id/txtContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtUsuario"
        android:layout_below="@+id/txtUsuario"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textCapCharacters|textPassword"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtContraseña"
        android:layout_alignStart="@+id/txtContraseña"
        android:layout_below="@+id/txtContraseña"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:text="Iniciar Sesion"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnIniciarSesion"
        android:layout_alignStart="@+id/btnIniciarSesion"
        android:layout_below="@+id/btnIniciarSesion"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Registro"
        android:textColor="@android:color/background_light" />
</RelativeLayout>
